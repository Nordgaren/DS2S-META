<local:METAControl x:Class="DS2S_META.BonfireMainControl"
                   x:Name="BonMainCon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DS2S_META"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="425" Background="LightGray">
    <Grid >
        <StackPanel Margin="25">
            <Label Content="Bonfires" FontSize="20" HorizontalAlignment="Center"/>
            <Separator Visibility="Hidden" Height="10"/>
            <Button Content="Unlock All Bonfires" Click="UnlockBonfires_Click" Width="125" HorizontalAlignment="Center" Margin="25,0,25,0"/>
            <Separator Visibility="Hidden" Height="10"/>
            <Label Content="Manage Bonfire Levels"/>
            <Border BorderBrush="Gray" BorderThickness="1" >
                <StackPanel Margin="25">
                    <ComboBox x:Name="cmbBonfirHub" SelectionChanged="cmbBonfirHub_SelectionChanged" />
                    <Separator Visibility="Hidden" Height="10"/>
                    <StackPanel x:Name="spBonfires">
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</local:METAControl>
